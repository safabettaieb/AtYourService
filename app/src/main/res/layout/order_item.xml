<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="8dp"
    android:clickable="true"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="#AE0A0A"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false">

    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="50dp"
        app:cardElevation="6dp"
        app:cardPreventCornerOverlap="false"
        app:strokeColor="#000000"
        app:strokeWidth="5dp">

        <ImageView
            android:id="@+id/orderImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/ic_order_list" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/orderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/categoryImg"
        android:layout_gravity="start|center_horizontal|top|center_vertical"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp"
        android:text="Name"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/orderIdLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="10dp"
        android:text="ID:"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/orderId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginLeft="110dp"
        android:layout_marginBottom="10dp"
        android:text="#1"
        android:textColor="#FFFFFF" />
</androidx.cardview.widget.CardView>
